<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}

        <script src="https://kit.fontawesome.com/a34c2ac31d.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/apropos.css') }}">
        
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="{{ asset('js/script.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <div class="nav_bar">
                    <div class="logo">
                        <figure>
                            <img src="{{ asset('img/logonessprimeur.png') }}">
                        </figure>
                    </div>
                    <div class="menu">
                        <ul>
                            <li><a href="{{ path('app_home') }}">home</a></li>
                            <li><a href="{{ path('app_product') }}">Produit</a></li>
                            <li><a href="{{ path('app_contact') }}">Contact</a></li>
                            <li><a href="{{ path('app_apropos') }}">A propos</a></li>
                        </ul>
                    </div>
                    <div class="shop_user">
                        <a href="#"><i class="fa-solid fa-cart-shopping"></i></a>
                        <ul>
                            <li><i class="fa-solid fa-user"></i></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <ul>
            <li><a href="{{ path('app_home') }}">• home</a></li>
            <li><a href="{{ path('app_product') }}">• Produit</a></li>
            <li><a href="{{ path('app_contact') }}">• Contact</a></li>
            <li><a href="{{ path('app_apropos') }}">• A propos</a></li>
            <li><a href="{{ path('app_panier') }}">Panier</a></li>
            <li><a href="{{ path('app_login') }}">login</a></li>
            <li><a href="{{ path('app_register') }}">register</a></li>
            {% if app.user %}
            <li><a href="{{ path('app_logout') }}">logout</a></li>                
            {% endif %}
        </ul>

        {% block body %}{% endblock %}

    </body>
</html>
