<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}

        <script src="https://kit.fontawesome.com/a34c2ac31d.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/apropos.css') }}">
        
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <div class="container">
                <div class="logo">
                    <img src="{{ asset('img/logonessprimeur.png')}}" alt="Logo Ness Primeur">
                </div>
                <nav class="menu">
                    <div class="head">
                        <div class="logo"><img src="{{ asset('img/logonessprimeur.png')}}" alt="Logo Ness Primeur"></div>
                        <button type="button" class="close-menu-btn"></button>
                    </div>
                    <ul>
                        <li><a href="">home</a></li>
                        <li class="dropdown">
                            <a href="">produit</a>
                            <i class="fa-solid fa-chevron-down"></i>
                                <ul class="sub-menu">
                                    <li><a href="#"><span>produit 1</span></a></li>
                                    <li><a href="#"><span>produit 2</span></a></li>
                                    <li><a href="#"><span>produit 3</span></a></li>
                                </ul>
                        </li>
                        <li><a href="">contact</a></li>
                        <li><a href="">a propos</a></li>
                        <li><a href="">teste</a></li>
                    </ul>
                </nav>
                <div class="header-right">
                    <button type="button" class="search-btn icon-btn"><i class="fa-solid fa-search"></i></button>
                    <button type="button" class="cart-btn icon-btn"><i class="fa-solid fa-shopping-cart"></i></button>
                    <button type="button" class="open-menu-btn">
                        <span class="line line-1"></span>
                        <span class="line line-2"></span>
                        <span class="line line-3"></span>
                    </button>

                </div>
            </div>
        </header>

        <section id="wrapper_content">
        <ul>
            <li><a href="{{ path('app_home') }}">• home</a></li>
            <li><a href="{{ path('app_product') }}">• Produit</a></li>
            <li><a href="{{ path('app_contact') }}">• Contact</a></li>
            <li><a href="{{ path('app_apropos') }}">• A propos</a></li>
            <li><a href="{{ path('app_panier') }}">Panier</a></li>
            <li><a href="{{ path('app_login') }}">login</a></li>
            <li><a href="{{ path('app_register') }}">register</a></li>
            {% if app.user %}
            <li><a href="{{ path('app_profil', {id: app.user.id}) }}">Profil</a></li>                
            <li><a href="{{ path('app_logout') }}">logout</a></li>                
            {% endif %}
        </ul>

        {% if app.user %}
            <p> {{ app.user.email }} - {{ app.user.roles|join(', ') }}</p>
            {% else %}
            <p><strong>Non connecté</strong></p>
        {% endif %}
        {% block body %}{% endblock %}
        </section>

                {% block javascripts %}
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
            <script src="{{ asset('js/script.js') }}"></script>
            <script src="{{ asset('js/ajax.js') }}"></script>
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        {% endblock %}
    </body>
</html>
