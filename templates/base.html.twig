<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}

        <script src="https://kit.fontawesome.com/a34c2ac31d.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/apropos.css') }}">
        
        {% endblock %}
    </head>
    <body>
        <header>
                <div class="nav_bar">

                        <figure>
                            <a href="{{ path('app_home') }}"><img src="{{ asset('img/logonessprimeur.png') }}"></a>
                        </figure>

                        <nav>
                            <ul>
                                <li><a class="link" href="{{ path('app_home') }}">Home</a></li>
                                
                                <li class="deroulant">
                                    <a class="link" href="{{ path('app_product') }}">Produits 
                                        <i class="fa-solid fa-chevron-down"></i></a></li>
                                <li><a class="link" href="{{ path('app_contact') }}">Contact</a></li>
                                <li><a class="link" href="{{ path('app_apropos') }}">A propos</a></li>
                            </ul>
                        </nav>

                    <div class="shop_user">
                        <ul>
                            <li class="boxPanier"><a href="{{ path('app_panier') }}"><i class="fa-solid fa-cart-shopping"></i></a></li>
                            <li class="userDeroulant"><a href="#"><i class="fa-solid fa-user"></i></a></li>
                        </ul>
                    </div>
                </div>
        </header>

        <section id="wrapper_content">
        <ul>
            <li><a href="{{ path('app_home') }}">• home</a></li>
            <li><a href="{{ path('app_product') }}">• Produit</a></li>
            <li><a href="{{ path('app_contact') }}">• Contact</a></li>
            <li><a href="{{ path('app_apropos') }}">• A propos</a></li>
            <li><a href="{{ path('app_panier') }}">Panier</a></li>
            <li><a href="{{ path('app_login') }}">login</a></li>
            <li><a href="{{ path('app_register') }}">register</a></li>
            {% if app.user %}
            <li><a href="{{ path('app_profil', {id: app.user.id}) }}">Profil</a></li>                
            <li><a href="{{ path('app_logout') }}">logout</a></li>                
            {% endif %}
        </ul>

        {% if app.user %}
            <p> {{ app.user.email }} - {{ app.user.roles|join(', ') }}</p>
            {% else %}
            <p><strong>Non connecté</strong></p>
        {% endif %}
        {% block body %}{% endblock %}
        </section>

                {% block javascripts %}
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
            <script src="{{ asset('js/script.js') }}"></script>
            <script src="{{ asset('js/ajax.js') }}"></script>
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        {% endblock %}
    </body>
</html>
