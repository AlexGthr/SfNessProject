{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

{% if items|length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.designation }}</td>
                    <td>{{ item.product.price }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.price * item.quantity}}</td>
                    <td>
                        <a href="{{ path('app_removeItemPanier', {'id' : item.product.id})}}" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total :</td>
                <td>{{ total }}</td>
                <td> <a href="" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i>
                </a></td>
            </tr>
        </tfoot>
    </table>
{% else %}
    <p>Le panier est vide.</p>
{% endif %}

{% endblock %}